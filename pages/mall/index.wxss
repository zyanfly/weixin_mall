page{
    background:#f1f1f1;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

/* 固定头部 */
.header {
    position: fixed;
    background-color: #ffffff;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3px 0 #e3e3e3;
    z-index: 99;
}

.box {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #f5f5f5;
    height: 68rpx;
    width: 700rpx;
    color: #999999;
}
.box image {
    margin-right: 20rpx;
    width: 28rpx;
    height: 28rpx;
    margin-bottom: -4rpx;
}
/* tab标签 */
.swiper-tab{
    overflow: hidden;
    white-space: nowrap;
    width:100%;
}
.swiper-tab-item{
    display:inline-flex;
    width:200rpx;
    height:100rpx;
    justify-content: center;
    align-items:center;
    overflow:scroll;
}
.swiper-tab-item.active{
    color:red;
}
/* 内容部分 */
.swiper-content{
    margin-top:168rpx;
    font-size:14px;
    width:100%;
}
.scroll-h{
    height:100%;
}
.product_container{
    display:flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding:10rpx;
}
.product_item{
    flex-basis: 50%;
}

.loading {
    margin: 50rpx 0 50rpx 0;
}

.loading-center {
    position: absolute;
    top: 50%;
    left: 50%;
}