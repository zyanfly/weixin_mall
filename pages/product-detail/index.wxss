/* 商品评论 */
.p_comment{
  background-color:#fff;
}
.like{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  padding-top:20rpx;
}
.like_btn{
  background-color:#FF9900;
  width:150rpx;
  height:80rpx;
  border-radius:50px;
  display:flex;
  justify-content: center;
  align-items: center;
}
.like_btn image{
  width:50rpx;
  height:50rpx;
}
.like_user{
  width:100%;
  display:flex;
  align-items: center;
  padding:20rpx;
  box-sizing: border-box;
}
.user_left{
  display:flex;
  flex-basis: 20%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  color:#888;
  font-size:14px;
}
.user_right{
  display:flex;
  flex-basis: 80%;
  overflow: hidden;
}
.user_right image, .like_more{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  position: relative;
  flex-shrink:0;
}
.like_more{
  background-color:#aaa;
  display: flex;
  justify-content: center;
  align-items: center;
}
.like_more image{
  width:60%;
}
.comment_item{
  display:flex;
  margin:0 20rpx;
  padding:20rpx 0;
  border-bottom:1px solid #ddd;
}
.comment_item image{
  width:60rpx;
  height:60rpx;
  margin-right:20rpx;
  border-radius:50%;
}
.i_center{
  font-size:14px;
}
.i_name,.i_delete{
  color:#304F80;
}
.i_time{
  font-size:12px;
  color:#666;
}

.pic {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}

.wechat image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}

